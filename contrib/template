# Template file for 'custard'
pkgname=custard
version=1.2
revision=1
makedepends="libxcb-devel xcb-util-devel xcb-util-wm-devel xcb-util-xrm-devel"
short_desc="Custard is a stacking/floating window manager for X.Org"
maintainer="MeYou <meeyou@tuta.io>"
license="MIT"
homepage="https://github.com/Sweets/custard"
distfiles="https://github.com/Sweets/${pkgname}/archive/v${version}.tar.gz"
